{
	"compilerOptions": {
        "experimentalDecorators": true,
		"module": "CommonJS",
		"noImplicitAny": true,
		"outDir": "build",
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"target": "ESNext"
	},
	"include": [
		"src/**/*"
	]
}
